# Observability - LangSmith
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=langsmith-api-key
LANGSMITH_PROJECT=langsmith-project

# Legacy LangChain env vars (for compatibility)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=langchain-project
LANGCHAIN_API_KEY=langchain-api-key

# LLM provider - Using OpenAI
PROVIDER=openai
OPENAI_API_KEY=<your-openai-api-key>
MODEL_NAME=gpt-4o

# Embeddings
EMBEDDINGS_PROVIDER=openai
EMBEDDINGS_MODEL=text-embedding-3-small
OPENAI_API_KEY_EMBEDDINGS=  # Can be same as OPENAI_API_KEY

# Web search (optional - configure if you have API key)
SEARCH_API=serpapi
SEARCH_API_KEY=

# Firecrawl (optional)
FIRECRAWL_BASE_URL=
FIRECRAWL_API_KEY=

# ChromaDB settings
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=research_docs